package com.company;

public class Second_largest_element_in_array {
    public static void main(String[] args){
        int A[]={340,78,99,900,76,45,230};
        int max1,max2;
         max1=max2=A[0];
        for(int i=0;i<A.length;i++){
            if(A[i]>max1){
                max2=max1;
                max1=A[i];
            }
            else if(A[i]>max2){
                max2=A[i];
            }
        }
        System.out.println("Second largest element is :"+max2);
    }
}
